          }
        ]
      }
    },
    "scale": {
      "type": "array",
      "description": "This pendulum monster's scale values.",
      "maxItems": 2,
      "minItems": 2,
      "items": {
        "type": "integer",
        "minimum": 1
      }
    },
    "alias": {
      "type": "integer",
      "description": "Alias card code.",
      "not": {
        "const": 0
      }
    }
